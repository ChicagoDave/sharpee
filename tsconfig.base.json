{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@sharpee/core": ["packages/core/src"],
      "@sharpee/core/*": ["packages/core/src/*"],
      "@sharpee/stdlib": ["packages/stdlib/src"],
      "@sharpee/stdlib/*": ["packages/stdlib/src/*"],
      "@sharpee/forge": ["packages/forge/src"],
      "@sharpee/forge/*": ["packages/forge/src/*"],
      "@sharpee/lang-en-us": ["packages/lang-en-us/src"],
      "@sharpee/lang-en-us/*": ["packages/lang-en-us/src/*"],
      "@core/*": ["packages/core/src/*"],
      "@stdlib/*": ["packages/stdlib/src/*"],
      "@forge/*": ["packages/forge/src/*"],
      "@extensions/*": ["packages/extensions/*"],
      "@mirrors/*": ["packages/extensions/mirrors/src/*"],
      "@conversation/*": ["packages/extensions/conversation/src/*"],
      "@time/*": ["packages/extensions/time/src/*"],
      "@abilities/*": ["packages/extensions/abilities/src/*"],
      "@cli/*": ["packages/cli/src/*"],
      "@web-client/*": ["packages/web-client/src/*"],
      "@dev-tools/*": ["packages/dev-tools/src/*"],
      "@stories/*": ["stories/*"],
      "@reflections/*": ["stories/reflections/src/*"]
    }
  }
}
---
interface Props {
  title: string;
}
const { title } = Astro.props;
const currentPath = Astro.url.pathname;

const nav = [
  { label: 'Home', href: '/' },
  { label: 'Docs', href: '/docs/' },
  { label: 'Design Patterns', href: '/design-patterns/' },
  { label: 'Games', href: '/games/' },
  { label: 'Downloads', href: '/downloads/' },
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} - Sharpee</title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
</head>
<body>
  <header class="site-header">
    <div class="header-top">
      <a href="/" class="logo-link">
        <img src="/images/sharpee-logo.png" alt="Sharpee" class="logo-img" />
        <span class="site-title">Sharpee</span>
      </a>
    </div>
    <nav class="header-nav">
      <div class="nav-inner">
        {nav.map(item => (
          <a href={item.href} class:list={['nav-link', { active: currentPath.startsWith(item.href) && item.href !== '/' || currentPath === item.href }]}>
            {item.label}
          </a>
        ))}
      </div>
    </nav>
  </header>

  <main>
    <slot />
  </main>

  <footer class="site-footer">
    <div class="footer-inner">
      <p>Copyright {new Date().getFullYear()} David Cornelson &mdash; MIT License</p>
    </div>
  </footer>
</body>
</html>

<style is:global>
  @font-face {
    font-family: 'Enchanted Land';
    src: url('/fonts/Enchanted Land DS D.otf') format('opentype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  * { margin: 0; padding: 0; box-sizing: border-box; }

  :root {
    --color-bg: #f8fafc;
    --color-text: #1e293b;
    --color-muted: #64748b;
    --color-accent: #059669;
    --color-accent-hover: #047857;
    --color-border: #e2e8f0;
    --color-surface: #ffffff;
    --font-display: 'Enchanted Land', serif;
    --header-height: 64px;
  }

  body {
    font-family: system-ui, -apple-system, sans-serif;
    background: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
  }

  a { color: var(--color-accent); }
  a:hover { color: var(--color-accent-hover); }
</style>

<style>
  .site-header {
    background: var(--color-surface);
    border-bottom: 1px solid var(--color-border);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header-top {
    text-align: center;
    padding: 0.5rem 0 0.25rem;
  }

  .logo-link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
  }

  .logo-img {
    height: 40px;
    width: auto;
  }

  .site-title {
    font-family: var(--font-display);
    font-size: 2.25rem;
    color: var(--color-text);
    letter-spacing: 0.05em;
  }

  .site-title:hover {
    color: var(--color-accent);
  }

  .header-nav {
    border-top: 1px solid var(--color-border);
  }

  .nav-inner {
    max-width: 1100px;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    gap: 0.25rem;
    padding: 0.3rem 1.5rem;
  }

  .nav-link {
    padding: 0.35rem 0.75rem;
    border-radius: 0.375rem;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-muted);
    transition: color 0.15s, background 0.15s;
  }

  .nav-link:hover {
    color: var(--color-text);
    background: var(--color-bg);
  }

  .nav-link.active {
    color: var(--color-accent);
    background: #ecfdf5;
  }

  main {
    max-width: 1100px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
    min-height: calc(100vh - var(--header-height) - 60px);
  }

  .site-footer {
    border-top: 1px solid var(--color-border);
    padding: 1rem 1.5rem;
    text-align: center;
    font-size: 0.8rem;
    color: var(--color-muted);
  }

  .footer-inner {
    max-width: 1100px;
    margin: 0 auto;
  }
</style>

import DocsLayout from '../../layouts/DocsLayout.astro';
import { Code } from 'astro-expressive-code/components';
---

<DocsLayout title="Documentation">
  <h1>Documentation</h1>
  <p class="subtitle">Get started building interactive fiction with Sharpee.</p>

  <section class="doc-section">
    <h2>Quick Example</h2>
    <p>Create a room and add an item:</p>
    <Code code={`import { WorldModel } from '@sharpee/world-model';

const world = new WorldModel();
const room = world.createEntity('kitchen', 'room');
room.name = 'Kitchen';
room.description = 'A warm kitchen with copper pots hanging from the ceiling.';

const knife = world.createEntity('knife', 'object');
knife.name = 'bread knife';
world.moveEntity(knife.id, room.id);`} lang="typescript" />
  </section>

  <section class="doc-section">
    <h2>Sections</h2>

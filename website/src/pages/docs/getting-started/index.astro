---
import { getCollection } from 'astro:content';

// Get the first doc in this section
const docs = await getCollection('docs', (doc) => doc.data.section === 'getting-started');
const sortedDocs = docs.sort((a, b) => a.data.order - b.data.order);

// Redirect to first doc or show placeholder
if (sortedDocs.length > 0) {
  const firstDoc = sortedDocs[0];
  return Astro.redirect(`/docs/getting-started/${firstDoc.slug.split('/').pop()}`);
}

import DocsLayout from '../../../layouts/DocsLayout.astro';
---

<DocsLayout title="Getting Started" section="getting-started">
  <p>Getting started documentation coming soon!</p>
  <p class="mt-4">
    In the meantime, check out the
    <a href="https://github.com/ChicagoDave/sharpee" class="text-emerald-600 hover:text-emerald-700">
      GitHub repository
    </a>
    for installation instructions.
  </p>
</DocsLayout>

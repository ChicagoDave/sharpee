---
import BaseLayout from '../../layouts/BaseLayout.astro';
import patternsData from '../../data/patterns.json';
const data = JSON.stringify(patternsData);
---

<BaseLayout title="Design Patterns">
  <div class="patterns-header">
    <div class="patterns-header-left">
      <h1>Design Patterns<span class="count" id="count">124 patterns</span></h1>
      <div class="breadcrumb" id="breadcrumb">
        <span class="sep">/</span>
        <a id="bc-home">All Categories</a>
        <span class="sep" id="bc-sep2" style="display:none">/</span>
        <span class="current" id="bc-current" style="display:none"></span>
      </div>
    </div>
    <input type="text" class="search-box" id="search" placeholder="Search patterns...">
  </div>

  <div class="dp-content" id="content"></div>

  <div class="overlay" id="overlay"></div>

  <div class="detail-panel" id="detail">
    <button class="detail-close" id="detail-close">&times;</button>
    <div id="detail-content"></div>
  </div>

  <script define:vars={{ data }}>
    const patternsData = JSON.parse(data);
    const { categories, nodes, edges } = patternsData;

    const nodeMap = new Map(nodes.map(n => [n.id, n]));
    const adj = new Map();
    nodes.forEach(n => adj.set(n.id, new Set()));
    edges.forEach(e => {
      adj.get(e.source)?.add(e.target);
      adj.get(e.target)?.add(e.source);
    });

    const byCategory = {};
    Object.keys(categories).forEach(cat => { byCategory[cat] = []; });
    nodes.forEach(n => {
      if (byCategory[n.category]) byCategory[n.category].push(n);
    });

    const content = document.getElementById('content');
    const breadcrumb = document.getElementById('breadcrumb');
    const bcHome = document.getElementById('bc-home');
    const bcSep2 = document.getElementById('bc-sep2');
    const bcCurrent = document.getElementById('bc-current');
    const searchInput = document.getElementById('search');
    const countEl = document.getElementById('count');
    const detailPanel = document.getElementById('detail');
    const detailContent = document.getElementById('detail-content');
    const overlay = document.getElementById('overlay');

    let currentView = 'categories';

    function closeDetail() {
      detailPanel.classList.remove('open');
      overlay.classList.remove('active');
    }
    document.getElementById('detail-close').addEventListener('click', closeDetail);
    overlay.addEventListener('click', closeDetail);

    function showDetail(d) {
      const connected = adj.get(d.id);
      const connNodes = [...connected].map(id => nodeMap.get(id)).filter(Boolean);
      const color = categories[d.category];

      detailContent.innerHTML = `
        <div class="detail-id">${d.id}</div>
        <div class="detail-name">${d.name}</div>
        <span class="detail-category" style="background:${color}22;color:${color};border:1px solid ${color}55">${d.category}</span>
        <div class="detail-section">
          <h3>Intent</h3>
          <p>${d.intent || 'No description available.'}</p>
        </div>
        ${connNodes.length > 0 ? `
        <div class="detail-section">
          <h3>Related Patterns (${connNodes.length})</h3>
          <div class="detail-connections">
            ${connNodes.map(cn => `<span class="detail-conn" data-id="${cn.id}" style="border-left:3px solid ${categories[cn.category]}">${cn.id}: ${cn.name}</span>`).join('')}
          </div>
        </div>` : ''}
      `;

      detailContent.querySelectorAll('.detail-conn').forEach(el => {
        el.addEventListener('click', () => {
          const target = nodeMap.get(el.dataset.id);
          if (target) showDetail(target);
        });
      });

      detailPanel.classList.add('open');
      overlay.classList.add('active');
    }

    function showCategories() {
      currentView = 'categories';
      closeDetail();
      searchInput.value = '';
      breadcrumb.classList.remove('visible');
      countEl.textContent = `${nodes.length} patterns`;

      content.innerHTML = '';
      const grid = document.createElement('div');
      grid.className = 'categories-grid fade-in';

      Object.entries(byCategory).forEach(([cat, patterns]) => {
        const card = document.createElement('div');
        card.className = 'category-card';
        const color = categories[cat];
        card.style.cssText = `border-top: 3px solid ${color}`;

        const previewItems = patterns.slice(0, 5).map(p => p.name);
        const more = patterns.length > 5 ? ` and ${patterns.length - 5} more` : '';

        card.innerHTML = `
          <div class="cat-header">
            <div class="cat-name">
              <span class="cat-dot" style="background:${color}"></span>
              ${cat}
            </div>
            <span class="cat-count">${patterns.length}</span>
          </div>
          <div class="cat-preview">
            ${previewItems.map(n => `<span class="cat-preview-item">${n}</span>`).join('')}${more ? `<span class="cat-preview-item" style="color:var(--color-muted)">${more}</span>` : ''}
          </div>
          <div class="cat-arrow">&rarr;</div>
        `;

        card.addEventListener('click', () => showCategoryPatterns(cat));
        grid.appendChild(card);
      });

      content.appendChild(grid);
    }

    function showCategoryPatterns(cat) {
      currentView = cat;
      closeDetail();
      searchInput.value = '';

      breadcrumb.classList.add('visible');
      bcSep2.style.display = '';
      bcCurrent.style.display = '';
      bcCurrent.textContent = cat;
      countEl.textContent = `${byCategory[cat].length} patterns`;

      content.innerHTML = '';
      const grid = document.createElement('div');
      grid.className = 'patterns-grid fade-in';

      byCategory[cat].forEach(p => {
        const card = document.createElement('div');
        card.className = 'pattern-card';
        card.dataset.id = p.id;
        card.innerHTML = `
          <div class="card-top">
            <span class="card-id">${p.id}</span>
            <span class="card-name">${p.name}</span>
          </div>
          <div class="card-intent">${p.intent || ''}</div>
        `;
        card.addEventListener('click', () => showDetail(p));
        grid.appendChild(card);
      });

      content.appendChild(grid);
    }

    bcHome.addEventListener('click', showCategories);

    searchInput.addEventListener('input', () => {
      const q = searchInput.value.toLowerCase();

      if (currentView === 'categories') {
        const cards = content.querySelectorAll('.category-card');
        let idx = 0;
        let totalVisible = 0;
        Object.entries(byCategory).forEach(([cat, patterns]) => {
          const card = cards[idx++];
          if (!card) return;
          if (!q) {
            card.style.display = '';
            totalVisible += patterns.length;
            return;
          }
          const match = cat.toLowerCase().includes(q) ||
            patterns.some(p =>
              p.name.toLowerCase().includes(q) ||
              p.id.toLowerCase().includes(q) ||
              (p.intent && p.intent.toLowerCase().includes(q))
            );
          card.style.display = match ? '' : 'none';
          if (match) totalVisible += patterns.length;
        });
        countEl.textContent = q ? `matching categories` : `${nodes.length} patterns`;
      } else {
        const cards = content.querySelectorAll('.pattern-card');
        let visible = 0;
        cards.forEach(card => {
          const p = nodeMap.get(card.dataset.id);
          const match = !q || (
            p.id.toLowerCase().includes(q) ||
            p.name.toLowerCase().includes(q) ||
            (p.intent && p.intent.toLowerCase().includes(q))
          );
          card.style.display = match ? '' : 'none';
          if (match) visible++;
        });
        countEl.textContent = `${visible} pattern${visible !== 1 ? 's' : ''}`;
      }
    });

    showCategories();
  </script>
</BaseLayout>

<style is:global>
  /* Patterns page header bar */
  .patterns-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }
  .patterns-header-left {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .patterns-header h1 {
    font-size: 1.5rem;
    font-weight: 600;
    white-space: nowrap;
  }
  .count { color: var(--color-muted); font-size: 0.8rem; margin-left: 0.5rem; font-weight: normal; }

  /* Breadcrumb */
  .breadcrumb {
    display: none;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.85rem;
  }
  .breadcrumb.visible { display: flex; }
  .breadcrumb a {
    color: var(--color-accent);
    text-decoration: none;
    cursor: pointer;
  }
  .breadcrumb a:hover { color: var(--color-accent-hover); }
  .breadcrumb .sep { color: var(--color-muted); }
  .breadcrumb .current { color: var(--color-text); font-weight: 500; }

  /* Search */
  .search-box {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    color: var(--color-text);
    padding: 0.375rem 0.75rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    width: 220px;
    min-width: 140px;
  }
  .search-box::placeholder { color: var(--color-muted); }
  .search-box:focus { outline: none; border-color: var(--color-accent); }

  /* Category cards */
  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1rem;
  }
  .category-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    padding: 1.5rem;
    cursor: pointer;
    transition: border-color 0.15s, transform 0.15s;
    position: relative;
    overflow: hidden;
  }
  .category-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }
  .cat-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.75rem;
  }
  .cat-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .cat-dot {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    flex-shrink: 0;
  }
  .cat-count {
    font-size: 0.8rem;
    color: var(--color-muted);
    background: var(--color-bg);
    padding: 0.2rem 0.6rem;
    border-radius: 9999px;
  }
  .cat-preview {
    font-size: 0.85rem;
    color: var(--color-muted);
    line-height: 1.5;
  }
  .cat-preview-item { display: inline; }
  .cat-preview-item + .cat-preview-item::before {
    content: ' Â· ';
    color: var(--color-border);
  }
  .cat-arrow {
    color: var(--color-muted);
    font-size: 1.25rem;
    margin-top: 0.75rem;
    text-align: right;
  }

  /* Pattern cards */
  .patterns-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 0.75rem;
  }
  .pattern-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    padding: 0.75rem 1rem;
    cursor: pointer;
    transition: border-color 0.15s, box-shadow 0.15s;
  }
  .pattern-card:hover {
    border-color: var(--color-accent);
    box-shadow: 0 2px 8px rgba(5, 150, 105, 0.08);
  }
  .card-top {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    margin-bottom: 0.35rem;
  }
  .card-id {
    font-size: 0.7rem;
    color: var(--color-muted);
    font-family: monospace;
    flex-shrink: 0;
  }
  .card-name {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text);
  }
  .card-intent {
    font-size: 0.8rem;
    color: var(--color-muted);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Detail panel */
  .detail-panel {
    position: fixed;
    top: 0;
    right: 0;
    width: 380px;
    height: 100vh;
    background: var(--color-surface);
    border-left: 1px solid var(--color-border);
    padding: 1.5rem;
    overflow-y: auto;
    transform: translateX(100%);
    transition: transform 0.25s ease;
    z-index: 200;
  }
  .detail-panel.open { transform: translateX(0); }
  .detail-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: none;
    border: none;
    color: var(--color-muted);
    font-size: 1.25rem;
    cursor: pointer;
  }
  .detail-close:hover { color: var(--color-text); }
  .detail-id {
    font-size: 0.75rem;
    color: var(--color-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .detail-name {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0.25rem 0 0.75rem;
  }
  .detail-category {
    display: inline-block;
    padding: 0.125rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }
  .detail-section h3 {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-muted);
    margin: 1rem 0 0.375rem;
  }
  .detail-section p {
    font-size: 0.875rem;
    line-height: 1.5;
    color: var(--color-text);
  }
  .detail-connections {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-top: 0.375rem;
  }
  .detail-conn {
    font-size: 0.75rem;
    padding: 0.2rem 0.5rem;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 0.25rem;
    color: var(--color-muted);
    cursor: pointer;
    transition: border-color 0.15s;
  }
  .detail-conn:hover {
    border-color: var(--color-accent);
    color: var(--color-text);
  }

  /* Overlay */
  .overlay {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.3);
    z-index: 150;
  }
  .overlay.active { display: block; }

  /* Transitions */
  .fade-in {
    animation: fadeIn 0.2s ease;
  }
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(8px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Mobile */
  @media (max-width: 640px) {
    .categories-grid { grid-template-columns: 1fr; }
    .patterns-grid { grid-template-columns: 1fr; }
    .search-box { width: 100%; }
    .detail-panel { width: 100vw; }
  }
</style>

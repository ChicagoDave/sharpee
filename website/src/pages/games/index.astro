---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import GameCard from '../../components/GameCard.astro';

const games = await getCollection('games');
const sortedGames = games.sort((a, b) => {
  // Featured first, then by date
  if (a.data.featured !== b.data.featured) {
    return a.data.featured ? -1 : 1;
  }
  return b.data.dateAdded.getTime() - a.data.dateAdded.getTime();
});
---

<BaseLayout title="Games" description="Play games built with Sharpee">
  <section class="py-12 bg-slate-50">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h1 class="text-4xl font-bold text-slate-900">Games</h1>
        <p class="mt-4 text-lg text-slate-600">
          Play interactive fiction games created with Sharpee.
          From classic adventures to modern experiments.
        </p>
      </div>

      {sortedGames.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {sortedGames.map((game) => (
            <GameCard
              title={game.data.title}
              description={game.data.description}
              coverImage={game.data.coverImage}
              authors={game.data.authors}
              version={game.data.version}
              platforms={game.data.platforms}
              slug={game.slug}
              type="game"
            />
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-slate-500 text-lg">Games coming soon!</p>
          <p class="mt-2 text-slate-400">
            Want to submit your game? Check out our
            <a href="/docs/developer-guide" class="text-emerald-600 hover:text-emerald-700">developer guide</a>.
          </p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>

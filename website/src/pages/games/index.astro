---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Games">
  <h1>Games</h1>
  <p class="subtitle">Play interactive fiction built with Sharpee.</p>

  <div class="game-grid">
    <div class="game-card">
      <div class="icon">&#x1f3f0;</div>
      <h2>Dungeon</h2>
      <p>A recreation of Mainframe Zork (1981) &mdash; explore the Great Underground Empire.</p>
      <a href="/play/dungeo/" class="play-link">Play in Browser</a>
    </div>
  </div>
</BaseLayout>

<style>
  h1 { font-size: 2rem; margin-bottom: 0.25rem; }
  .subtitle { color: var(--color-muted); margin-bottom: 2rem; font-size: 1.1rem; }
  .game-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 1.5rem; }
  .game-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    padding: 1.5rem;
  }
  .game-card .icon { font-size: 2.5rem; margin-bottom: 0.5rem; }
  .game-card h2 { font-size: 1.2rem; margin-bottom: 0.5rem; }
  .game-card p { color: var(--color-muted); font-size: 0.9rem; margin-bottom: 1rem; }
  .play-link {
    font-weight: 600;
    text-decoration: none;
    font-size: 0.9rem;
  }
</style>

---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Play Dungeon">
  <div class="game-bar">
    <h1>Dungeon</h1>
    <div class="hint">Type <code>help</code> for commands</div>
  </div>
  <div class="game-container">
    <iframe src="/web/dungeo/index.html" title="Dungeon game"></iframe>
  </div>
</BaseLayout>

<style>
  .game-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.5rem;
  }
  .game-bar h1 {
    font-size: 1.25rem;
  }
  .hint {
    font-size: 0.875rem;
    color: var(--color-muted);
  }
  .hint code {
    background: #f1f5f9;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
  }
  .game-container {
    height: calc(100dvh - 11rem);
  }
  iframe {
    width: 100%;
    height: 100%;
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
  }
</style>

{
  "name": "sharpee",
  "version": "0.1.0",
  "description": "A TypeScript-based Interactive Fiction Engine",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/world-model",
    "packages/stdlib",
    "packages/forge",
    "packages/lang-en-us",
    "packages/extensions/*",
    "packages/ext-daemon",
    "packages/cli",
    "packages/web-client",
    "packages/dev-tools",
    "stories/*"
  ],
  "scripts": {
    "clean": "rimraf \"packages/*/dist\" \"packages/extensions/*/dist\" \"stories/*/dist\"",
    "build": "lerna run build",
    "test": "lerna run test"
  },
  "devDependencies": {
    "lerna": "^8.2.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  },
  "author": "",
  "license": "MIT"
}

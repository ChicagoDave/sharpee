{
  "name": "sharpee",
  "version": "0.1.0",
  "description": "A TypeScript-based Interactive Fiction Engine",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "workspaces": [
    "packages/core",
    "packages/world-model",
    "packages/if-domain",
    "packages/stdlib",
    "packages/engine",
    "packages/event-processor",
    "packages/sharpee",
    "packages/lang-en-us",
    "packages/parser-en-us",
    "packages/text-services",
    "packages/text-service",
    "packages/text-service-basic",
    "packages/forge",
    "packages/client-core",
    "packages/clients/*",
    "packages/extensions/*",
    "packages/ext-daemon",
    "packages/cli",
    "packages/web-client",
    "packages/dev-tools",
    "packages/platforms/*",
    "stories/*"
  ],
  "scripts": {
    "clean": "turbo run clean",
    "build": "turbo run build",
    "build:clean": "pnpm run clean",
    "build:all": "turbo run build",
    "build:core": "turbo run build --filter='...@sharpee/platform-cli-en-us'",
    "build:packages": "turbo run build --filter='./packages/**'",
    "build:platforms": "turbo run build --filter='./packages/platforms/**'",
    "build:platform:cli-en": "turbo run build --filter='@sharpee/platform-cli-en-us...'",
    "build:changed": "turbo run build --filter='...[origin/main]'",
    "dev": "pnpm -r --parallel run dev",
    "dev:cli-en": "pnpm --filter '@sharpee/platform-cli-en-us' run dev",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:platforms": "pnpm --filter './packages/platforms/**' run test",
    "test:coverage": "vitest run --coverage",
    "test:arch": "vitest run tests/architecture",
    "test:arch:watch": "vitest tests/architecture",
    "test:debt": "vitest run tests/architecture/architectural-debt.test.ts",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm -r run lint",
    "watch": "pnpm -r --parallel run watch",
    "watch:cli-en": "pnpm --filter '@sharpee/platform-cli-en-us' run watch"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^7.0.3",
    "lerna": "^8.2.2",
    "rimraf": "^5.0.5",
    "turbo": "^2.5.6",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4"
  },
  "author": "",
  "license": "MIT"
}
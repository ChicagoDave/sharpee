{
    "name": "@sharpee/client-electron",
    "version": "1.0.0-alpha.1",
    "description": "Electron desktop client for Sharpee interactive fiction engine",
    "main": "dist/main.js",
    "types": "dist/main.d.ts",
    "scripts": {
      "build": "tsc",
      "test": "vitest",
      "test:watch": "vitest --watch",
      "test:coverage": "vitest --coverage",
      "lint": "eslint src --ext .ts,.tsx",
      "clean": "rimraf dist",
      "start": "electron dist/main.js",
      "dev": "tsc && electron dist/main.js",
      "pack": "electron-builder --dir",
      "dist": "electron-builder",
      "prepublishOnly": "npm run clean && npm run build"
    },
    "peerDependencies": {
      "@sharpee/core": "^0.1.0",
      "@sharpee/client-core": "^0.1.0"
    },
    "dependencies": {
      "electron-store": "^8.1.0"
    },
    "devDependencies": {
      "@sharpee/core": "^0.1.0",
      "@sharpee/client-core": "^0.1.0",
      "@types/node": "^18.0.0",
      "@typescript-eslint/eslint-plugin": "^5.59.0",
      "@typescript-eslint/parser": "^5.59.0",
      "electron": "^27.0.0",
      "electron-builder": "^24.6.4",
      "eslint": "^8.38.0",
      "rimraf": "^5.0.5",
      "vitest": "^1.6.0",
      "typescript": "^5.2.2"
    },
    "build": {
      "appId": "com.sharpee.client-electron",
      "productName": "Sharpee IF Player",
      "mac": {
        "category": "public.app-category.games"
      },
      "win": {
        "target": "nsis"
      },
      "linux": {
        "target": "AppImage",
        "category": "Game"
      },
      "files": [
        "dist/**/*",
        "node_modules/**/*"
      ]
    },
    "files": [
      "dist"
    ],
    "publishConfig": {
      "access": "public"
    },
    "exports": {
      ".": {
        "types": "./dist/main.d.ts",
        "import": "./dist/main.js",
        "require": "./dist/main.js"
      }
    },
    "license": "MIT",
    "engines": {
      "node": ">=14.0.0"
    }
  }
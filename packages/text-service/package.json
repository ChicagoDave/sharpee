{
  "name": "@sharpee/text-service",
  "version": "0.9.84",
  "description": "Text service for Sharpee - resolves templates and produces ITextBlock output",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:ci": "vitest run",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist",
    "build:npm": "tsc --outDir dist"
  },
  "dependencies": {
    "@sharpee/text-blocks": "workspace:*",
    "@sharpee/if-services": "workspace:*",
    "@sharpee/if-domain": "workspace:*",
    "@sharpee/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.6.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "interactive-fiction",
    "if",
    "text-adventure",
    "sharpee",
    "text-service",
    "fyrevm"
  ],
  "author": "Sharpee Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ChicagoDave/sharpee.git",
    "directory": "packages/text-service"
  },
  "homepage": "https://github.com/ChicagoDave/sharpee#readme",
  "bugs": {
    "url": "https://github.com/ChicagoDave/sharpee/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

{
  "$schema": "https://raw.githubusercontent.com/nicedoc/tauri/main/crates/tauri-utils/schema.json",
  "productName": "Zifmia",
  "version": "0.9.86",
  "identifier": "com.sharpee.zifmia",
  "build": {
    "frontendDist": "../../../dist/runner"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Zifmia",
        "width": 900,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' blob:; style-src 'self' 'unsafe-inline'; img-src 'self' blob: data:; connect-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "fileAssociations": [
      {
        "ext": ["sharpee"],
        "mimeType": "application/x-sharpee-story",
        "description": "Sharpee Story Bundle"
      }
    ]
  },
  "plugins": {}
}

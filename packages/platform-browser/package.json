{
  "name": "@sharpee/platform-browser",
  "version": "0.9.70-beta",
  "description": "Browser client infrastructure for Sharpee interactive fiction",
  "type": "module",
  "main": "./dist/index.js",
  "module": "dist-npm/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "build:npm": "tsc --outDir dist-npm"
  },
  "peerDependencies": {
    "@sharpee/core": "workspace:*",
    "@sharpee/engine": "workspace:*",
    "@sharpee/world-model": "workspace:*"
  },
  "dependencies": {
    "lz-string": "^1.5.0"
  },
  "devDependencies": {
    "@types/lz-string": "^1.5.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist-npm",
    "src"
  ],
  "keywords": [
    "interactive-fiction",
    "text-adventure",
    "browser",
    "sharpee"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}

{
  "name": "@sharpee/transcript-tester",
  "version": "0.9.90",
  "description": "Transcript-based testing tool for Sharpee interactive fiction",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "transcript-test": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "test": "vitest",
    "build:npm": "tsc --outDir dist"
  },
  "dependencies": {
    "@sharpee/core": "workspace:*",
    "@sharpee/engine": "workspace:*",
    "@sharpee/world-model": "workspace:*",
    "@sharpee/stdlib": "workspace:*",
    "@sharpee/lang-en-us": "workspace:*",
    "@sharpee/parser-en-us": "workspace:*",
    "@sharpee/text-service": "workspace:*",
    "chalk": "^4.1.2",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0"
  },
  "keywords": [
    "sharpee",
    "interactive-fiction",
    "testing",
    "transcript"
  ],
  "author": "Sharpee Team",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}

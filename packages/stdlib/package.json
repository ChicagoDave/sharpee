{
  "name": "@sharpee/stdlib",
  "version": "0.9.84",
  "description": "Standard library for Sharpee IF Platform - actions, commands, and game mechanics",
  "main": "./dist-npm/index.js",
  "module": "dist-npm/index.js",
  "types": "./dist-npm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist-npm/index.d.ts",
      "require": "./dist-npm/index.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "test": "vitest",
    "test:ci": "CI=true vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist coverage",
    "build:npm": "tsc --outDir dist-npm"
  },
  "dependencies": {
    "@sharpee/core": "workspace:*",
    "@sharpee/if-domain": "workspace:*",
    "@sharpee/if-services": "workspace:*",
    "@sharpee/lang-en-us": "workspace:*",
    "@sharpee/world-model": "workspace:*"
  },
  "devDependencies": {
    "@sharpee/parser-en-us": "workspace:*",
    "@types/node": "^20.11.19",
    "@vitest/ui": "^3.2.4",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist-npm"
  ],
  "keywords": [
    "interactive-fiction",
    "if",
    "text-adventure",
    "sharpee",
    "stdlib",
    "actions"
  ],
  "author": "Sharpee Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ChicagoDave/sharpee.git",
    "directory": "packages/stdlib"
  },
  "homepage": "https://github.com/ChicagoDave/sharpee#readme",
  "bugs": {
    "url": "https://github.com/ChicagoDave/sharpee/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

{
  "name": "@sharpee/engine",
  "version": "0.9.0-beta.1",
  "description": "Runtime engine for Sharpee IF Platform - game loop, command execution, and turn management",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:verbose": "vitest run --reporter=verbose",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@sharpee/core": "workspace:*",
    "@sharpee/event-processor": "workspace:*",
    "@sharpee/if-domain": "workspace:*",
    "@sharpee/if-services": "workspace:*",
    "@sharpee/lang-en-us": "workspace:*",
    "@sharpee/parser-en-us": "workspace:*",
    "@sharpee/stdlib": "workspace:*",
    "@sharpee/text-services": "workspace:*",
    "@sharpee/world-model": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "interactive-fiction",
    "if",
    "text-adventure",
    "sharpee",
    "engine",
    "game-engine"
  ],
  "author": "Sharpee Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ChicagoDave/sharpee.git",
    "directory": "packages/engine"
  },
  "homepage": "https://github.com/ChicagoDave/sharpee#readme",
  "bugs": {
    "url": "https://github.com/ChicagoDave/sharpee/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

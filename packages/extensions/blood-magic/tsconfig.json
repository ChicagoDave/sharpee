{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@sharpee/core": ["../../core/src"],
      "@sharpee/core/*": ["../../core/src/*"],
      "@sharpee/world-model": ["../../world-model/src"],
      "@sharpee/world-model/*": ["../../world-model/src/*"],
      "@sharpee/stdlib": ["../../stdlib/src"],
      "@sharpee/stdlib/*": ["../../stdlib/src/*"],
      "@sharpee/if-domain": ["../../if-domain/src"],
      "@sharpee/if-domain/*": ["../../if-domain/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts", "tests"]
}